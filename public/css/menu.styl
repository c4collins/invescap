@require "defaults"
// Menu Settings
.menu
    background transparent
    li
        a
            text-shadow none
ul.horizontal-menu
    margin 0
        a
            color color-content-text
                
ul.horizontal-menu-primary
    border-style solid
    border-color color-content-text transparent
    border-width 1px 0 2px
    li
        width 33%
        text-align center
        a
            width 100%
            color color-content-text
            letter-spacing 3px
            // font-variant small-caps
            text-transform uppercase
        &.has-menu
            a
                span.arrow
                    display none
        &:hover,
        .hover
            a
                background-color color-accent-light
        ul
            width 100%
            li
                width 100%
                a
                    font-size 0.8vw
                    text-align center
                &:hover,
                .hover
                    a
                        background-color color-accent-dark
                        color color-accent-light
                
ul.horizontal-menu-primary-submenu
    border-width 1px 0 0 0
ul.horizontal-menu-secondary
    border none
    li
        &:first-child
            margin-right 20px
        a
            // font-variant small-caps
            text-transform uppercase
            font-size fs-content-small
            color color-content-text

