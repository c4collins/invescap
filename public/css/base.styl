@require "defaults"
@require "globals"
@require "menu"
            
 // Page Sections           
.header
    background-linear-gradient(to top, color-accent-darkest, 100%, color-accent-middle, 30%)
    box-shadow 0 1px 10px 2px color-accent-darkest-transparent
    &:after
        clearfix()
    .logo-wrapper
        *
            border-right 1px solid color-choice(@background-color)
            &:last-child
                border none
    .logo-egade
        image-choice(True, @background-color, "../images/logo-egade", "png")
    .logo-invescap
        image-choice(True, @background-color, "../images/logo-invescap", "png")
        float right
    .header-menu
        display inline-block
        square-icon-size(icon-size)
        image-choice(True, @background-color, "../images/icons/menu", "png")
.hero 
    background-color color-accent-middle
    &:after
        clearfix()
    h1
        margin-top 0
        font-size 25px
        color color-accent-lightest
    .hero-image
        padding-bottom 45px
.program-infobox
    background-color color-accent-darkest
    &:after
        clearfix()
    h3
        font-size 18px
        color color-accent-lightest
        text-transform uppercase
        font-weight normal
    div
        color color-accent-lightest
        font-size 8pt
        a
            color color-accent-lightest
.core
    h2
        text-transform uppercase
        font-size 21px
        padding-left 15px
        border-bottom 2px solid color-accent-darkest
.core-information
    position relative
    background-color color-accent-lightest
    color color-choice(@background-color, color-accent-lightest, color-accent-darkest)
    margin 20px 0 30px
    footer        
        border-bottom 2px solid color-accent-darkest
        padding-bottom 5px
        &:after
            clearfix()
        .icon-social
            float right
            square-icon-size(icon-size* (2/3))
        .social-share
            image-choice(True, @background-color, "../images/icons/share", "png")
            &:hover
                image-choice(False, @background-color, "../images/icons/share", "png")
        .social-email
            image-choice(True, @background-color, "../images/icons/email", "png")
            &:hover
                image-choice(False, @background-color, "../images/icons/email", "png")
    ul.core-information-menu
        image-choice(True, @background-color, "../images/icons/menu", "png")
        &:hover
            li
                display block
        li
            display none
            
    .core-information-menu
        image-choice(True, @background-color, "../images/icons/menu", "png")
.information-slider
    background-color color-accent-darkest
    color color-accent-lightest
    margin 20px 0 30px
    padding-bottom 35px
    h2
        text-transform uppercase
        font-size 21px
        padding-left 15px
        border-bottom 2px solid color-accent-lightest
    div.bx-wrapper
        margin 30px auto
        background-color @background-color
        div.bx-viewport
            background-color @background-color
            color @color
    .speakers
        background-size 100% auto
        background-repeat no-repeat
        height 307px
    .vanessa-kolodziej
        background-image url("../images/speakers-vanessa-kolodziej.png")
.footer
    background-color color-accent-lightest
    &:after
        clearfix()
    .footer-icons
        float right
    .logo-wrapper
        *
            border-right 1px solid color-choice(@background-color)
            &:last-child
                border none
        &:before
            clearfix()
    
    .logo-egade
        image-choice(True, @background-color, "../images/logo-egade", "png")
    .logo-invescap
        image-choice(True, @background-color, "../images/logo-invescap", "png")
        float right
        
    .social-facebook
        image-choice(True, @background-color, "../images/icons/facebook", "png")
        &:hover
            image-choice(False, @background-color, "../images/icons/facebook", "png")
        
    .social-twitter
        image-choice(True, @background-color, "../images/icons/twitter", "png")
        &:hover
            image-choice(False, @background-color, "../images/icons/twitter", "png") 
    .social-share
        image-choice(True, @background-color, "../images/icons/share", "png")
        &:hover
            image-choice(False, @background-color, "../images/icons/share", "png") 
            
    .footer-menu
        display inline-block
        square-icon-size(icon-size)
        image-choice(True, @background-color, "../images/icons/menu", "png")
                
    ul
        margin 0
        li
            list-style-type none
            display inline-block
            a
                color color-accent-lightest
                text-transform uppercase
            ul
                display none
            &:hover
                ul
                    display block    
