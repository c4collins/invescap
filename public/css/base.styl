.information-slider
    background-color color-accent-dark
    color color-accent-light
    margin 20px 0 30px
    padding-bottom 35px
    h2
        text-transform uppercase
        font-size fs-title-large
        padding-left 15px
        border-bottom 2px solid color-accent-light
    div.bx-wrapper
        margin 30px auto
        background-color @background-color
        div.bx-viewport
            background-color @background-color
            color @color
    .speakers
        background-size 100% auto
        background-repeat no-repeat
        height 307px
    .vanessa-kolodziej
        background-image url("..../images/speakers-vanessa-kolodziej.png")
.footer
    background-color color-accent-light
    &:after
        clearfix()
    // .footer-icons
    //     float right
    .logo-wrapper
        // *
        //     border-right 1px solid color-choice(@background-color)
        //     &:last-child
        //         border none
        img
            width 100%
        &:before
            clearfix()
             
    ul
        margin 30px 10% 80px
        li
            margin 0
            padding 0.1rem
            list-style-type none
            font-size fs-title-medium
            line-height @font-size + 0.1
            position relative
            i
                color color-accent-medium
                position absolute
                top 0.2rem
            a
                color color-accent-dark
                text-transform uppercase   
                font-weight bold
                padding-left 45px
