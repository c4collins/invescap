@require "defaults"
@require "globals"
@require "menu"
            
 // Page Sections           
.header
    background-color color-accent-dark
    box-shadow 0 1px 10px 2px @background-color
    position relative
    z-index 1
    .inner-container
        &:after
            clearfix()
        .logo-wrapper
            img
                width 100%
                max-width 355px

.hero 
    background-color color-accent-medium
    &:after
        clearfix()
    h1
        display inline-block
        margin-top 0
        padding-top 25px
        margin-left 25px
        font-weight 500
        font-size fs-title-large
        color color-content-text
        text-transform uppercase
        border-bottom (@font-weight/175)px solid @color
    .hero-image  
        padding-bottom 45px
    .hero-image-overlay
        // background-image linear-gradient(152deg, color-accent-medium, color-accent-medium 7%, transparent 40%), linear-gradient(177deg, color-accent-medium, color-accent-medium 6%, transparent 13%)
        height 779px
        position absolute
        z-index 1
        width page-width
        h2
            padding-top 115px
            padding-left 115px
            width 450px
            color color-accent-light
            text-transform uppercase
            font-size fs-title-medium
        
.program-infobox
    background-color color-accent-medium
    &:after
        clearfix()
    h4,
    h5        
        color color-content-text
        text-transform uppercase
        margin-bottom 1.0rem
    h4
        font-size fs-content-medium
        font-weight 900
    h5
        font-size fs-content-small
    div
        color color-content-text
        text-align left
        font-size fs-content-small
        padding-right 15%
        font-weight 400
        p
            padding 0
            margin 0
        strong
            text-transform uppercase
        a
            color color-accent-dark
        &:last-child
            text-align right
            font-size fs-content-small
            padding-left 20%
            padding-right 0
            strong
                text-transform none
            
.core
    h2
        text-transform uppercase
        font-size fs-title-large
        padding-left 15px
    .map
        h2
            font-size fs-title-small
            text-align right
            padding 20px 10% 0 0
        div
            text-transform uppercase
            letter-spacing 3px
            font-size fs-content-small - 25%
            text-align center
        .background
            color color-content-background
            background-color color-content-text
            div
                font-size fs-title-large
                font-weight bold
                letter-spacing 0
            
            
    .objetivos
        color color-content-background
        border-width 0
        border-color color-content-background
        background-color color-content-text
        padding 25px
        h2
            border-width 2px 0
            border-style solid 
            text-align center
            margin-bottom 25px
        .objetivo
            top 0
            bottom 0
            width 30%
            margin 0 1.5%
            padding 25px 10px
            display inline-block
            border-width 1px
            border-style solid 
            h3
                text-transform uppercase
                font-size fs-title-small
                line-height fs-title-small - 5%
                margin-bottom 25px
            ul
                margin 0
                li
                    padding 0
                    list-style-type none
                    font-size fs-content-small
    .dinamica
        background-color color-accent-light
        color color-accent-dark
        h2
            border-bottom none
            margin-bottom 0
        .horizontal-list
            margin 0 auto 20px
            width 57%
            div
                display table-cell
                width 25%
                // height 100%
                margin 0
                padding 0 10px
                font-size fs-content-small
                line-height fs-content-medium
                font-weight bold
                text-transform uppercase
                text-align center
                vertical-align middle
                border-right 2px solid color-accent-dark
                &:first-child
                    // margin-left 20%
                &:last-child
                    border none
                    // margin-right 20%    
            
    .speakers-and-modules
        background-color color-accent-medium
        &:after
            clearfix()
        h2
            text-align center
            font-size fs-title-large
            padding 15px 0
            background-color color-accent-dark
            color color-accent-light
            border none
        h3
            font-size fs-title-large
            padding 0
            color color-accent-dark
            text-transform uppercase
            margin-bottom 0.25em
        // .module-container
        //     padding 0 20%
        .module
            padding-bottom 25px
            i
                margin 0
                // margin-top 0.2vw
                font-size fs-icon-medium
                line-height @font-size
            table
                border 0
                td
                    border 0
                & tr:first-child td
                    i
                        color color-accent-contrast
                & td:first-child
                    vertical-align top
                & td:last-child
                    vertical-align medium
                    padding-top 0
            p
                font-size fs-content-large
                margin 0
                padding 0 0 0 5px
                &.title
                    font-weight bold
                    text-transform uppercase
                &.date 
                    em
                        margin 0 5px
                        color color-accent-contrast
.core-information
    position relative
    background-color color-accent-light
    color color-choice(@background-color, color-accent-light, color-accent-dark)
    margin 20px 0 30px
    h4
        border-bottom 1px color-accent-dark solid
    footer        
        padding-bottom 25px
        &:after
            clearfix()
        .fa
            float right
            font-size fs-icon-medium
            margin 0 6px
            color color-accent-dark
    // ul.core-information-menu
    //     image-choice(True, @background-color, "../images/icons/menu", "png")
    //     &:hover
    //         li
    //             display block
    //     li
    //         display none
.information-slider
    background-color color-accent-dark
    color color-accent-light
    margin 20px 0 30px
    padding-bottom 35px
    h2
        text-transform uppercase
        font-size fs-title-large
        padding-left 15px
        border-bottom 2px solid color-accent-light
    div.bx-wrapper
        margin 30px auto
        background-color @background-color
        div.bx-viewport
            background-color @background-color
            color @color
    .speakers
        background-size 100% auto
        background-repeat no-repeat
        height 307px
    .vanessa-kolodziej
        background-image url("../images/speakers-vanessa-kolodziej.png")
.footer
    background-color color-accent-light
    &:after
        clearfix()
    // .footer-icons
    //     float right
    .logo-wrapper
        // *
        //     border-right 1px solid color-choice(@background-color)
        //     &:last-child
        //         border none
        img
            width 100%
        &:before
            clearfix()
             
    ul
        margin 30px 10% 80px
        li
            margin 0
            padding 0.1rem
            list-style-type none
            font-size fs-title-medium
            line-height @font-size + 0.1
            position relative
            i
                color color-accent-medium
                position absolute
                top 0.2rem
            a
                color color-accent-dark
                text-transform uppercase   
                font-weight bold
                padding-left 45px
