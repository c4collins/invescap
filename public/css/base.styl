@require "defaults"
@require "globals"
@require "menu"
@require "slider"
            
 // Page Sections           
.header
    background-color color-accent-dark
    box-shadow 0 1px 10px 2px @background-color
    position relative
    z-index 1
    .inner-container
        &:after
            clearfix()
        .logo-wrapper
            img
                width 100%
                max-width 355px

.hero 
    background-color color-accent-medium
    &:after
        clearfix()
    h1
        display inline-block
        margin-top 0
        padding-top 25px
        margin-left 25px
        font-weight 500
        font-size fs-title-large
        color color-content-text
        text-transform uppercase
        border-bottom (@font-weight/175)px solid @color
    .image-slider-container
        position relative
        // img
        //     filter blur(1px)
    .hero-image-overlay
        // background-image linear-gradient(152deg, color-accent-medium, color-accent-medium 7%, transparent 40%), linear-gradient(177deg, color-accent-medium, color-accent-medium 6%, transparent 13%)
        background-color alpha(color-accent-dark, 0.4)
        position absolute
        top 0
        bottom 0
        right 0
        left 0
        z-index 1
        h2
            padding-top 115px
            padding-left 115px
            width 55%
            color color-accent-light
            text-transform uppercase
            font-size fs-title-medium
            font-weight 300
        table
            margin 15% auto 0
            table-layout fixed
            width 450px
            color color-content-background
            background-color alpha(color-accent-dark, 0.6)
            tr
                td
                    padding 25px
                    border-bottom none
                    h5
                        text-transform uppercase
        
.program-infobox
    background-color color-accent-medium
    &:after
        clearfix()
    h4,
    h5        
        color color-content-text
        text-transform uppercase
        margin-bottom 1.0rem
    h4
        font-size fs-content-medium
        font-weight 900
    h5
        font-size fs-content-small
    div
        color color-content-text
        text-align left
        font-size fs-content-small
        padding-right 15%
        font-weight 400
        p
            padding 0
            margin 0
        strong
            text-transform uppercase
        a
            color color-accent-dark
        &:last-child
            text-align right
            font-size fs-content-small
            padding-left 20%
            padding-right 0
            strong
                text-transform none
            
.core
    h2
        text-transform uppercase
        font-size fs-title-large
        padding-left 15px
    .map
        .map-info
            position absolute
            width 100%
            letter-spacing 3px
            margin-top -440px
            margin-bottom 210px
            h2
                font-size fs-title-small
                text-align right
                padding 20px 10% 0 0
            p
                text-transform uppercase
                font-size fs-content-small - 25%
                text-align center
                background-color rgba(255, 255, 255, 0.2)
            .background
                color color-content-background
                background-color color-content-text
                p
                    color color-accent-medium
                    font-size fs-title-large
                    font-weight bold
                    letter-spacing 0
                    margin-bottom 0
                    background-color transparent
        .map-image.background-image  
            height 560px
            background-size auto (@height - 60px)
            background-image url("../images/map.png")
            filter none
            
    .admisiones
    .objetivos
        color color-content-background
        border-width 0
        border-color color-content-background
        background-color color-content-text
        position relative
        .inner-container
            position absolute
            top 25px
            left 10%
            right 10%
            padding 25px
        h2
            border-width 2px 0
            border-style solid 
            text-align center
            margin 0 auto 25px
            padding 15px 0
            font-weight 300
            width 75%
        ul
            margin 0
            li
                padding 0
                list-style-type none
                font-size fs-content-medium
        .admisiones-container-3,
        .objetivos-container-2,
        .objetivos-container-3
            position relative
            height 190px
            margin 0 auto 20px
            width 725px
            h3
                text-transform uppercase
                font-size fs-title-small
                line-height fs-title-small - 5%
                margin-bottom 25px
            .admision
            .objetivo
                position absolute
                width 220px
                margin 0 1.5%
                padding 25px 10px
                display inline-block
                border-width 1px
                border-style solid
                top 0
                bottom 0
                left 33.5%
                &:first-child
                    left 0
                &:last-child
                    left auto
                    right 0
        .objetivos-container-2
            .objetivo
                &:first-child
                    left 120px
                &:last-child
                    left auto
                    right 120px
    .admisiones
        .background-image
            height 385px
            background-image url("../images/94_20140708_94-4b4c5d7695a2369a7f49f1f34d14495e.jpg")
    .objetivos
        .background-image
            height 580px
            background-image url("../images/7.jpg")
           
    .dinamica
        background-color color-accent-light
        color color-accent-dark
        h2
            border-bottom none
            margin-bottom 0
        .horizontal-list
            margin 0 auto 20px
            width 57%
            div
                display table-cell
                width 5%
                // height 100%
                margin 0
                padding 0 10px
                font-size fs-content-small
                line-height fs-content-medium
                font-weight bold
                text-transform uppercase
                text-align center
                vertical-align middle
                border-right 2px solid color-accent-dark
                &:first-child
                    // margin-left 20%
                &:last-child
                    border none
                    // margin-right 20%    
    .speakers-modules-calendar
        position relative
        background-color color-accent-dark
        .background-image  
            height 260px
            background-image url("../images/93_20140708_93-9a1d1db55a2d529eb087700eb7393ca3.jpg")
        h2
            // filter grayscale(1) contrast(100%)
            position absolute
            font-size fs-title-large
            color color-content-background
            margin 25px 10%
            for n in 2 3 4
                &:nth-child({n})
                    top n * 50px - 75px
            
    .speakers
    .modules
        span 
            color color-accent-contrast
        h2
            text-align center
            font-size fs-title-large
            padding 15px 0
            background-color color-accent-dark
            color color-accent-light
            border none
        h3
        h4
            font-size fs-title-large
            padding 0
            color color-accent-dark
            text-transform uppercase
            margin-bottom 0.25em
        h4
            font-size fs-title-small
            text-align center
        h5
            font-size fs-content-medium
            color color-accent-dark
            text-align center
        ul
            background-color color-accent-dark
            color color-content-background
            padding 10px
            margin 0 auto
            width 75%
            font-size fs-content-small
            li
                list-style-type none
                margin 0
                padding 0
        // .module-container
        //     padding 0 20%
    .speakers
        margin 25px 0
        img
            width 80%
            display block
            border-radius(50%)
            filter sepia(1) hue-rotate(163deg)
        *
            margin 0 auto
    .modules
        background-color color-accent-medium
        .module
            padding-bottom 25px
            i
                margin 0
                // margin-top 0.2vw
                font-size fs-icon-medium
                line-height @font-size
            table
                border 0
                td
                    border 0
                & tr:first-child td
                    i
                        color color-accent-contrast
                & td:first-child
                    vertical-align top
                & td:last-child
                    vertical-align medium
                    padding-top 0
            p
                font-size fs-content-large
                margin 0
                padding 0 0 0 5px
                &.title
                    font-weight bold
                    text-transform uppercase
                &.date 
                    em
                        margin 0 5px
                        color color-accent-contrast
.core-information
    position relative
    background-color color-content-background
    color color-content-text
    margin 20px 0 30px
    .inner-container
        width 68%
        margin 0 10% 0 18%
    h4
        border-bottom 1px color-accent-dark solid
    footer        
        padding-bottom 25px
        &:after
            clearfix()
        .fa
            float right
            font-size fs-icon-medium
            margin 0 6px
            color color-accent-dark
