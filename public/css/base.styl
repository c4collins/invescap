@require "defaults"
@require "globals"
@require "menu"
            
 // Page Sections           
.header
    background-color color-accent-darkest
    box-shadow 0 1px 10px 2px @background-color
    position relative
    z-index 1
    .inner-container
        &:after
            clearfix()
    .logo-wrapper
        *
            border-right 1px solid color-choice(@background-color)
            &:last-child
                border none
    .logo-egade
        image-choice(True, @background-color, "../images/logo-egade", "png")
    .logo-invescap
        image-choice(True, @background-color, "../images/logo-invescap", "png")
        float right
