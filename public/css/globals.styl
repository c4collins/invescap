@require "defaults"
// Tag Overrides / Resets
*,
*::before,
*::after
  padding 0
  margin 0
  outline 0
  box-sizing inherit
  /* this disables font boosting on mobile chrome... */
  max-height 10000vh
  /* this might also do the same thing one day... */
  -webkit-text-size-adjust none
  -moz-text-size-adjust none
  -ms-text-size-adjust none
html 
  font-size 10px
  box-sizing border-box

h1, h2, h3, h4, h5, h6
    margin 0
body
    margin 0
    background-color color-content-background
    font-family font-family-main
a
    text-decoration none
    
// Global Settings
.full-width
  width 100%
.center-image
  margin 0 auto
  display block
  // width 20%
.icon-social
    square-icon-size(icon-size)
.inner-container
    width page-width
    margin 0 auto

// Slideshow Global Settings
.hero,
.image-slider
    div.bx-wrapper  
        box-shadow(none)
        div.bx-viewport
            box-shadow(none)
            border 0
