//- include ./datafile.jade
doctype html
html(lang="es")
    head
        title!= public._data.page_title
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
        //- Typekit 
        script(src="https://use.typekit.net/sdv8lwg.js")
        script.
            try{Typekit.load({ async: true });}catch(e){}
        //- Kickstart
        script(src="js/kickstart.js")
        link(rel="stylesheet" href="css/kickstart/kickstart.css" media="all")
        link(rel="stylesheet" type="text/css" href="css/base.css")
    body
        section(class="header header-desktop")
            div(class="inner-container")
                div(class="logo-wrapper col_10")
                    div(class="logo logo-egade")
                    div(class="logo logo-invescap")
                div(class="header-menu col_2")
                    ul(class="menu vertical")
                        each link in public._data.secondary_menu
                            li
                                a(href=link.url)!= link.name


        section(class="hero hero-desktop")
            div(class="inner-container")
                h1!= public._data.program_info.school_name
                ul(class="menu horizontal-menu horizontal-menu-secondary right")
                    each link in public._data.secondary_menu
                        li
                            a(href="#" + link.url)!= link.name
                ul(class="menu horizontal-menu horizontal-menu-primary")
                    each section in public._data.content_sections
                        li
                            a(href="#" + section.menu_name.toLowerCase())!= section.menu_name.toUpperCase()
                            ul(class="horizontal-menu-primary-submenu")
                                each content in section.contents
                                    li
                                        a(href="#" + content.menu_name.toLowerCase())!= content.menu_name
                section(class="program-infobox grid flex")
                    h3(class="col_12")!= public._data.program_info.program_name
                    div(class="col_4")
                        p!= public._data.program_info.start_date
                        p!= public._data.program_info.location
                    div(class="col_4")
                    div(class="col_4")
                        p 
                            a(href="mailto:" + public._data.program_info.contact.email) 
                        p!= public._data.program_info.contact.email
                        p!= public._data.program_info.contact.phone
                section(class="hero-image image-slider")
                    ul(class="slideshow")
                        li
                            img(src="images/hero-slideshow-1.png")
       
        block content

        section(class="footer footer-desktop")
            div(class="inner-container")
                each tagline in public._data.taglines
                    p!=tagline
                ul(class="footer-icons")
                    li
                        a(href="fb:")
                            div(class="icon-social social-facebook")
                    li
                        a(href="tw:")
                            div(class="icon-social social-twitter")
                    li
                        a(href="")
                            div(class="icon-social social-share")
                    li
                        div(class="footer-menu")
                            ul(class="menu vertical")
                                each link in public._data.secondary_menu
                                    li
                                        a(href=link.url)!= link.name
                div(class='logo-wrapper col_10')
                    div(class="logo logo-egade")
                    div(class="logo logo-invescap")
